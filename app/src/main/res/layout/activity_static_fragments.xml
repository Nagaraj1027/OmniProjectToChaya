<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="2"
    tools:context=".fragment.StaticFragmentsActivity">

    <fragment
        android:id="@+id/fragment1"
        class="com.example.omniprojecttochaya.fragment.FragmentOne"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:layout_weight="1" />

    <fragment
        android:id="@+id/fragment2"
        class="com.example.omniprojecttochaya.fragment.FragmentTwo"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:layout_toRightOf="@+id/fragment1"
        android:layout_weight="1" />

    <Button
        android:id="@+id/btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SEND DATA TO FRAGMENT" />

</LinearLayout>